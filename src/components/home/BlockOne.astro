---
import type { RootObject, SectionsHomeAbout } from "../../interfaces/dbData";
import ButtonContent from "../buttons/Buttons";
import IconGlobal from "../global/IconGlobal.tsx";
import HighlightedText from "../global/TitleColor";
interface Props {
  data: RootObject;
  homeSection: SectionsHomeAbout[]
}

const { data,homeSection } = Astro.props;
---

<section class="flex items-center font-poppins md:py-[100px] py-[50px]">
  <div class="justify-center flex-1 max-w-7xl py-4 mx-auto lg:py-6 md:px-6">
    <div class="flex flex-wrap">
      <div class="w-full px-4 mb-10 lg:w-1/2 lg:mb-0 flex self-center relative justify-center">
        <img
          src={homeSection[0].additionalImages[0]}
          alt="aboutimage"
          class="relative z-10 object-cover md:w-[600px] w-[320px] md:h-[500px] h-[320px]  rounded-2xl shadow-lg"
        />
        <img
          src={homeSection[0].additionalImages[1]}
          alt="aboutimage"
          class=" z-10 object-cover md:w-[200px] w-[150px] md:h-[280px] h-[150px] absolute -bottom-4 -right-3 rounded-xl border-[8px] border-primary"
        />
      </div>
      <div class="w-full px-6 mb-10 lg:w-1/2 lg:mb-0 flex flex-col self-center">
        <div class="pl-4 mb-6 border-l-4 border-primary">
          <div class="flex items-center gap-2 flex-wrap-reverse">
            <span class="text-2xl font-black text-primary">
              {data.name}
            </span>
            <span class="text-[30px]">
              <IconGlobal />
            </span>
          </div>
          <h2 class="mt-2 text-3xl font-black md:text-4xl text-tertiary">
            

           {homeSection[0].title}
           
          </h2>
        </div>
        <p class="mb-6 text-base leading-7 text-gray-600">
          {homeSection[0].text}
        </p>
        <ButtonContent />
      </div>
    </div>
  </div>
</section>

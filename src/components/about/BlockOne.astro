---
import type { RootObject, SectionsHomeAbout } from "../../interfaces/dbData";
import ButtonContent from "../buttons/Buttons";
import HighlightedText from "../global/TitleColor";
interface Props {
  data: RootObject;
  aboutSection: SectionsHomeAbout[]
}

const { data, aboutSection } = Astro.props;
---

<section class="flex items-center py-20 bg-gray-100 font-poppins">
  <div
    class="justify-center flex-1 max-w-6xl px-4 py-4 mx-auto lg:py-6 md:px-6"
  >
    <div class="flex flex-wrap items-center">
      <div class="w-full px-4 mb-10 xl:w-1/2 lg:mb-8">
        <div class="pl-4 border-l-4 border-secondary">
          <span class="text-secondary text-[22px] font-bold">About Us</span>
          <h2 class="text-5xl font-bold text-primary">
            {data.slogan[2]} 
          </h2>
        </div>
        <p class="mb-4 text-base leading-7 text-gray-600">
          {aboutSection[0].text}
        </p>
        <ButtonContent />
      </div>
      <div class="w-full px-4 mb-10 xl:w-1/2 lg:mb-8">
        <div class="flex flex-wrap">
          <div class="w-full px-4 md:w-1/2">
            <img
              src={aboutSection[0].additionalImages[0]}
              alt=""
              class="object-cover md:w-[250px] md:h-[220px] w-[250px] h-[250px] rounded-md mb-6 md:block hidden"
            />
            <img
              src={aboutSection[0].additionalImages[1]}
              alt=""
              class="object-cover md:w-[250px] md:h-[220px] w-[250px] h-[250px] rounded-md md:block hidden"
            />
          </div>
          <div class="w-full px-4 md:w-1/2 xl:mt-11">
            <img
              src={aboutSection[0].additionalImages[2]}
              alt=""
              class="object-cover md:w-[250px] md:h-[220px] w-[250px] h-[250px] rounded-md md:block hidden mb-6"
            />
            <img
              src={aboutSection[0].additionalImages[3]}
              alt=""
              class="object-cover md:w-[250px] md:h-[220px] w-[250px] h-[250px] rounded-md"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
